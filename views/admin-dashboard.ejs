<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link rel="icon" href="/logo homepage/Logo_01.png" type="image/png">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Dashboard Style -->
  <link rel="stylesheet" href="/CSS/admin_dashboard.css" />

  <!-- Admin Logic -->
  <script type="module" src="/JS/admin_auth.js" defer></script>
</head>
<body>
  <div class="container py-5">
    <!-- Top Bar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-primary fw-bold">üêç Hoffmann's Reptile Admin Dashboard</h1>
      <button id="logoutBtn" class="btn btn-danger">Logout</button>
    </div>

    <hr />

    <!-- Admin Grid Layout -->
    <div class="row mt-4">
      <!-- Card 1 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Manage Products</h5>
            <p class="card-text">Add, edit, or remove reptiles and related products from inventory.</p>
            <a href="#" class="btn btn-outline-success w-100">Open</a>
          </div>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">View Messages</h5>
            <p class="card-text">Browse inquiries submitted through the contact form.</p>
            <a href="#" class="btn btn-outline-primary w-100">Open</a>
          </div>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">User Activity</h5>
            <p class="card-text">Monitor recent user logins, feedback, and site traffic.</p>
            <a href="#" class="btn btn-outline-warning w-100">Open</a>
          </div>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Reports</h5>
            <p class="card-text">Generate sales reports, traffic data, and inventory status.</p>
            <a href="#" class="btn btn-outline-info w-100">Open</a>
          </div>
        </div>
      </div>

      <!-- Card 5 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Admin Settings</h5>
            <p class="card-text">Manage admin access, passwords, and preferences.</p>
            <a href="#" class="btn btn-outline-secondary w-100">Open</a>
          </div>
        </div>
      </div>

      <!-- Card 6 -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">System Logs</h5>
            <p class="card-text">Track errors, warnings, and system performance.</p>
            <a href="#" class="btn btn-outline-dark w-100">Open</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
